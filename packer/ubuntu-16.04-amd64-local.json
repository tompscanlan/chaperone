{
  "variables": {
    "version": "0.2",
    "role": "chaperone",
    "memory": "512",
    "cpu": "1",
    "disk_size": "20000",
    "ssh_username": "vmware",
    "ssh_password": "VMware1!",
      "ubuntu_iso_url": "http://releases.ubuntu.com/xenial/ubuntu-16.04.2-server-amd64.iso",
    "ubuntu_iso_checksum": "2bce60d18248df9980612619ff0b34e6",
    "ubuntu_iso_checksum_type": "md5"
  },
  "builders": [
    {
      "type": "vmware-iso",
      "name": "{{user `role`}}",
      "vm_name": "{{user `role`}}",
      "output_directory": "base-vmware",
      "boot_command": [
        "<enter><wait>",
        "<f6><esc>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs>",
        "/install/vmlinuz ",
        "initrd=/install/initrd.gz ",
        "net.ifnames=0 ",
        "auto-install/enable=true ",
        "debconf/priority=critical ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg ",
        "<enter>"
      ],
      "boot_wait": "10s",
      "guest_os_type": "ubuntu-64",
      "http_directory": ".",
      "iso_checksum": "{{user `ubuntu_iso_checksum`}}",
      "iso_checksum_type": "{{user `ubuntu_iso_checksum_type`}}",
      "iso_url": "{{user `ubuntu_iso_url`}}",
      "headless": true,
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "1000s",
      "shutdown_command": "sudo systemctl poweroff",
      "disk_size": "{{user `disk_size`}}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `cpu`}}",
        "mks.3denable": false
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
          "setup.sh"
      ]
    }
  ]
}
